{
  "name": "@origin/dapp-creator-client",
  "version": "1.0.0",
  "description": "Tool of creating configuration files for Origin DApps",
  "main": "src/index.js",
  "scripts": {
    "build": "per-env",
    "build:production": "webpack --loglevel notice",
    "lint": "eslint '**/*.js' && npm run prettier:check",
    "prettier": "prettier --write *.js \"src/**/*.js\"",
    "prettier:check": "prettier -c *.js \"src/**/*.js\"",
    "start": "per-env",
    "start:development": "webpack-dev-server --watch --open",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OriginProtocol/origin"
  },
  "keywords": [
    "Origin Protocol",
    "DApp",
    "Ethereum"
  ],
  "author": "Origin Protocol Inc",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@origin/graphql": "^0.1.1",
    "@sentry/browser": "^5.4.3",
    "acorn": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "clipboard-polyfill": "^2.8.1",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.0.0",
    "dotenv-webpack": "^1.7.0",
    "file-loader": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "per-env": "^1.0.2",
    "react": "^16.8.6",
    "react-color": "^2.17.3",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "react-styl": "^0.0.3",
    "react-svg-loader": "^3.0.0",
    "react-web3": "^1.2.0",
    "rework": "^1.0.1",
    "style-loader": "1.1.3",
    "superagent": "^5.1.0",
    "terser": "4.6.3",
    "terser-webpack-plugin": "^2.0.0",
    "web3": "1.0.0-beta.34",
    "webpack": "^4.35.0",
    "webpack-cli": "3.3.10"
  },
  "devDependencies": {
    "bootstrap": "4.4.1",
    "typeface-lato": "0.0.75",
    "typeface-poppins": "0.0.72",
    "webpack-dev-server": "3.10.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "alias": {
            "actions": "./src/actions",
            "components": "./src/components",
            "pages": "./src/pages",
            "reducers": "./src/reducers",
            "utils": "./src/utils"
          }
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ]
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
